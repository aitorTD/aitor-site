<style>
  .contact-section {
    margin: 4rem auto;
  }
  
  .contact-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }
  
  .section-title {
    font-size: 2.5rem;
    color: white;
    text-align: center;
    margin: 0;
    text-shadow: 0 0 10px var(--color-primary-medium);
    letter-spacing: 2px;
    font-weight: 300;
    position: relative;
    display: inline-block;
  }
  
  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: var(--color-primary);
    border-radius: 3px;
  }
  
  .contact-cards-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2.5rem;
    width: 100%;
    margin: 2rem 0;
  }
  
  .contact-card {
    position: relative;
    background: rgba(25, 33, 52, 0.3);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    width: 280px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    overflow: hidden;
    border: 1px solid rgba(var(--color-primary-rgb), 0.3);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
  }
  
  .contact-card:hover {
    transform: translateY(-15px);
    border-color: var(--color-primary);
    box-shadow: 0 15px 30px rgba(var(--color-primary-rgb), 0.2);
  }
  
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: var(--color-primary);
    opacity: 0.7;
    filter: blur(5px);
    transition: all 0.4s ease;
  }
  
  .contact-card:hover .card-glow {
    height: 10px;
    opacity: 1;
    filter: blur(8px);
  }
  
  .card-icon {
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
    background: rgba(var(--color-primary-rgb), 0.1);
    border-radius: 50%;
    padding: 1.2rem;
    transition: all 0.4s ease;
    border: 2px solid rgba(var(--color-primary-rgb), 0.3);
    box-shadow: 0 5px 15px rgba(var(--color-primary-rgb), 0.1);
  }
  
  .contact-card:hover .card-icon {
    transform: scale(1.15) rotate(5deg);
    background: rgba(var(--color-primary-rgb), 0.2);
    border-color: var(--color-primary);
    box-shadow: 0 8px 25px rgba(var(--color-primary-rgb), 0.25);
  }
  
  .card-icon svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 2px 5px rgba(var(--color-primary-rgb), 0.5));
  }
  
  .contact-card h3 {
    color: white;
    margin: 0 0 1.2rem 0;
    font-size: 1.4rem;
    font-weight: 500;
    letter-spacing: 1px;
    position: relative;
    display: inline-block;
  }
  
  .contact-card h3::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 2px;
    background: rgba(var(--color-primary-rgb), 0.5);
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  
  .contact-card:hover h3::after {
    width: 60px;
    background: var(--color-primary);
  }
  
  .contact-link {
    color: var(--color-primary-light);
    text-decoration: none;
    font-size: 1rem;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    background: rgba(var(--color-primary-rgb), 0.1);
    margin-top: 0.5rem;
  }
  
  .contact-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 100%;
    bottom: 0;
    left: 0;
    background-color: rgba(var(--color-primary-rgb), 0.1);
    transition: width 0.4s ease;
    border-radius: 20px;
    z-index: -1;
  }
  
  .contact-link:hover {
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(var(--color-primary-rgb), 0.3);
  }
  
  .contact-link:hover::after {
    width: 100%;
  }
  
  .contact-message {
    max-width: 700px;
    text-align: center;
    margin-top: 2rem;
    position: relative;
    padding: 2rem;
    background: rgba(var(--color-primary-rgb), 0.05);
    border-radius: 12px;
    border: 1px solid rgba(var(--color-primary-rgb), 0.1);
    backdrop-filter: blur(5px);
    transform: translateY(0);
    transition: all 0.4s ease;
  }
  
  .contact-message:hover {
    transform: translateY(-5px);
    border-color: rgba(var(--color-primary-rgb), 0.3);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }
  
  .contact-message p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    line-height: 1.7;
    font-weight: 300;
    letter-spacing: 0.5px;
  }
  
  .message-animation {
    display: flex;
    justify-content: center;
    gap: 0.6rem;
    margin-top: 1.5rem;
  }
  
  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: var(--color-primary);
    opacity: 0.7;
    animation: pulse 1.5s infinite ease-in-out;
    box-shadow: 0 0 10px rgba(var(--color-primary-rgb), 0.5);
  }
  
  .dot:nth-child(2) {
    animation-delay: 0.2s;
  }
  
  .dot:nth-child(3) {
    animation-delay: 0.4s;
  }
  
  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.7;
    }
    50% {
      transform: scale(1.5);
      opacity: 1;
    }
  }
  
  /* Add a subtle floating animation to cards */
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  .contact-card:nth-child(1) {
    animation: float 6s ease-in-out infinite;
  }
  
  .contact-card:nth-child(2) {
    animation: float 7s ease-in-out infinite;
    animation-delay: 0.5s;
  }
  
  .contact-card:nth-child(3) {
    animation: float 8s ease-in-out infinite;
    animation-delay: 1s;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .contact-cards-container {
      flex-direction: column;
      align-items: center;
      gap: 3rem;
    }
    
    .contact-card {
      width: 100%;
      max-width: 320px;
    }
    
    .contact-message {
      padding: 1.5rem;
    }
    
    .contact-message p {
      font-size: 1.1rem;
    }
    
    /* Disable floating animation on mobile for better performance */
    .contact-card:nth-child(1),
    .contact-card:nth-child(2),
    .contact-card:nth-child(3) {
      animation: none;
    }
  }
</style>