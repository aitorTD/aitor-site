<style>
  .profile-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1rem;
    align-items: center;
  }

  .tag {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.8rem;
    border-radius: 1.5rem;
    background: var(--color-primary-dark, #2a4c2a);
    color: var(--color-text-inverse);
    backdrop-filter: blur(4px);
    border: 1px solid rgba(var(--color-primary-rgb), 0.7);
    font-size: 0.9rem;
    transition: all 0.3s ease;
    box-shadow: 0 0 10px rgba(var(--color-primary-rgb), 0.4);
  }

  .tag:hover {
    background: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 0 15px rgba(var(--color-primary-rgb), 0.5);
  }

  .tag-icon {
    font-size: 1rem;
  }

  .social-tags {
    display: flex;
    gap: 0.75rem;
    margin-left: auto;
  }

  .social-tag {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background: rgba(var(--color-primary-rgb), 0.25);
    backdrop-filter: blur(4px);
    border: 1px solid rgba(var(--color-primary-rgb), 0.5);
    transition: all 0.3s ease;
    box-shadow: 0 0 10px rgba(var(--color-primary-rgb), 0.2);
    cursor: pointer;
  }

  .social-tag:hover {
    background: rgba(var(--color-primary-rgb), 0.35);
    transform: translateY(-2px) rotate(10deg);
    box-shadow: 0 0 15px rgba(var(--color-primary-rgb), 0.3);
    cursor: pointer;
  }

  .social-tag svg {
      cursor: pointer !important;
  }

  .social-icon {
    width: 1.5rem;
    height: 1.5rem;
    fill: var(--color-primary);
    cursor: pointer;
  }

  .cv-tag {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 1.5rem;
    background: var(--color-primary);
    color: var(--color-text-inverse);
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s ease;
    text-decoration: none;
    box-shadow: 0 0 10px rgba(var(--color-primary-rgb), 0.4);
    cursor: pointer;
  }

  .cv-tag span {
    cursor: pointer;
  }

  .cv-tag:hover {
    background: var(--color-primary-light);
    transform: translateY(-2px);
    box-shadow: 0 0 15px rgba(var(--color-primary-rgb), 0.5);
    cursor: pointer;
  }

  .cv-icon {
    font-size: 1rem;
    cursor: pointer;
  }

  /* Quantum effect for badges */
  .quantum-badge {
    position: relative;
    overflow: hidden;
  }

  .quantum-badge::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle,
      rgba(var(--color-primary-rgb), 1) 0%,
      transparent 70%
    );
    opacity: 0;
    transform: scale(0.5);
    animation: quantum-pulse 4s ease-in-out infinite;
  }

  @keyframes quantum-pulse {
    0% {
      opacity: 0;
      transform: scale(0.5);
    }
    50% {
      opacity: 0.5;
      transform: scale(1);
    }
    100% {
      opacity: 0;
      transform: scale(0.5);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .profile-tags {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .social-tags {
      margin-left: 0;
      margin-top: 0.5rem;
    }
    
    .intro-title {
      font-size: 1.6rem;
    }
    
    .intro-description {
      font-size: 0.95rem;
      line-height: 1.5;
    }
    
    .tag, .cv-tag {
      font-size: 0.85rem;
      padding: 0.35rem 0.7rem;
    }
    
    .glass-panel {
      max-width: 95%;
      margin: 0 auto;
    }
  }
  
  @media (max-width: 480px) {
    .intro-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    
    .text-content {
      width: 100%;
      padding: 0 0.5rem;
    }
    
    .avatar-container {
      margin-bottom: 1.5rem;
      transform: scale(0.85);
    }
    
    .intro-title {
      font-size: 1.2rem;
      text-align: center;
      margin-bottom: 0.5rem;
    }
    
    .intro-description {
      font-size: 0.8rem;
      text-align: center;
      line-height: 1.4;
      max-width: 100%;
    }
    
    .profile-tags {
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 0.8rem;
      max-width: 100%;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      margin-top: 1.2rem;
    }
    
    .tag, .cv-tag {
      font-size: 0.8rem;
      padding: 0.35rem 0.6rem;
      width: 100%;
      justify-content: center;
    }
    
    .social-tags {
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 1rem;
      grid-column: span 2;
      display: flex;
    }
    
    .social-tag {
      width: 2.2rem;
      height: 2.2rem;
    }
    
    .social-icon {
      width: 1.1rem;
      height: 1.1rem;
    }
    
    .glass-panel {
      width: 100%;
      max-width: 100%;
      padding: 1rem 0.25rem;
      margin: 0;
    }
    
    .info-container {
      padding: 0 0.25rem;
    }
  }
</style>
