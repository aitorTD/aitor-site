<style>
  /* Skills section styling */
  .skills-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  /* Legend styling */
  .skill-legend {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
  }

  .legend-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    display: inline-block;
  }

  .legend-dot.proficient {
    background-color: #4caf50; /* Green */
  }

  .legend-dot.learning {
    background-color: #ff9800; /* Orange */
  }

  .legend-dot.planned {
    background-color: #f44336; /* Red */
  }

  .skill-category h3 {
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 0.25rem;
  }

  /* Skill grid and items */
  .skill-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 0.75rem;
  }

  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 0.5rem;
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.134);
    backdrop-filter: blur(10px);
    text-align: center;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    border: 2px solid transparent;
  }

  .skill-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
  }

  .skill-item span {
    margin-top: 0.4rem;
    font-weight: 500;
    font-size: 0.8rem;
  }

  /* Proficiency indicators */
  .skill-item.proficient {
    border-color: #4caf50; /* Green */
  }

  .skill-item.learning {
    border-color: #ff9800; /* Orange */
  }

  .skill-item.planned {
    border-color: #f44336; /* Red */
  }

  /* Technology icons styling */
  .tech-icon {
    width: 35px;
    height: 35px;
    filter: drop-shadow(0 0 2px rgba(255, 255, 255, 0.3));
  }

  .strength-icon {
    font-size: 30px;
    margin-bottom: 0.5rem;
  }

  .strength-icon {
    font-size: 20px;
    margin-right: 10px;
    display: inline-block;
  }

  .feature-list {
    list-style-type: none !important;
    padding-left: 0 !important;
  }

  .feature-list.no-bullets {
    list-style: none;
    padding-left: 0;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    margin-bottom: 14px;
  }

  /* Minimalist Timeline styling */
  .timeline-minimal {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .timeline-item-minimal {
    position: relative;
    padding-left: 1rem;
    border-left: 2px solid var(--color-primary-light);
    transition: all 0.3s ease;
  }

  .timeline-item-minimal:hover {
    border-left-color: var(--color-primary);
    transform: translateX(4px);
    /* box-shadow: 0 0 8px rgba(152, 255, 197, 0.3); */
  }

  .timeline-header {
    margin-bottom: 1rem;
  }

  .timeline-header h3 {
    margin: 0.25rem 0;
    color: var(--color-primary);
  }

  .timeline-date {
    font-size: 0.9rem;
    opacity: 0.9;
    color: var(--color-primary);
  }

  .company {
    font-style: italic;
    opacity: 0.8;
    margin: 0;
  }

  /* List styling */
  .experience-list,
  .project-list,
  .education-list {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-top: 0.5rem;
  }

  .experience-list li,
  .project-list li,
  .education-list li {
    margin-bottom: 0.5rem;
  }

  /* Education and certification styling */
  .education-item,
  .certification-item,
  .achievement-item,
  .project-item {
    margin-bottom: 1.5rem;
  }

  .education-item h3,
  .certification-item h3,
  .achievement-item h3,
  .project-item h3 {
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .education-year,
  .education-place,
  .certification-provider {
    font-style: italic;
    opacity: 0.8;
    margin-bottom: 0.5rem;
  }

  /* Ensure default cursor on text elements */
  p,
  h1,
  h2,
  h3,
  li,
  span,
  .glass-panel * {
    cursor: default !important;
  }

  /* Keep pointer cursor for interactive elements */
  a,
  button,
  .color-option,
  .accent-button {
    cursor: pointer !important;
  }

  /* Adjust container-row padding and gap */
  .container-row {
    display: flex;
    gap: 1rem;
    margin: 1rem auto;
    max-width: 100%;
    padding: 0;
  }

  /* Adjust info-container padding */
  .info-container {
    position: relative;
    z-index: 2;
    margin: 0.5rem auto;
    max-width: 100%;
    padding: 0.5rem;
  }
</style>

