  /* Ensure default cursor on text elements */
  p,
  h1,
  h2,
  h3,
  li,
  span,
  .glass-panel * {
    cursor: default !important;
  }

  /* Keep pointer cursor for interactive elements */
  a,
  button,
  .color-option,
  .accent-button {
    cursor: pointer !important;
  }

  /* Adjust container-row padding and gap */
  .container-row {
