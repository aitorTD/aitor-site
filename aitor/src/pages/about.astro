  }

  .legend-dot.learning {
    background-color: #ff9800; /* Orange */
  }

  .legend-dot.planned {
    background-color: #f44336; /* Red */
  }

  .skill-category h3 {
    color: var(--color-primary);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  /* Skill grid and items */
  .skill-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    text-align: center;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    border: 2px solid transparent;
  }

  .skill-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  .skill-item span {
    margin-top: 0.5rem;
    font-weight: 500;
  }

  /* Proficiency indicators */
  .skill-item.proficient {
    border-color: #4caf50; /* Green */
  }

  .skill-item.learning {
    border-color: #ff9800; /* Orange */
  }

  .skill-item.planned {
    border-color: #f44336; /* Red */
  }

  .skill-item.strength {
    border-color: var(--color-primary);
  }

  /* Technology icons styling */
  .tech-icon {
    width: 50px;
    height: 50px;
    filter: drop-shadow(0 0 3px rgba(255, 255, 255, 0.4));
  }

  .strength-icon {
    font-size: 30px;
    margin-bottom: 0.5rem;
  }

  .strength-icon {
    font-size: 20px;
    margin-right: 10px;
    display: inline-block;
  }

  .feature-list {
    list-style-type: none !important;
    padding-left: 0 !important;
  }

  .feature-list.no-bullets {
    list-style: none;
    padding-left: 0;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    margin-bottom: 14px;
  }

  /* Minimalist Timeline styling */
  .timeline-minimal {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .timeline-item-minimal {
    position: relative;
    padding-left: 1rem;
    border-left: 2px solid var(--color-primary-light);
    transition: all 0.3s ease;
  }

  .timeline-item-minimal:hover {
    border-left-color: var(--color-primary);
    transform: translateX(4px);
    /* box-shadow: 0 0 8px rgba(152, 255, 197, 0.3); */
  }

  .timeline-header {
    margin-bottom: 1rem;
  }

  .timeline-header h3 {
    margin: 0.25rem 0;
    color: var(--color-primary);
  }

  .timeline-date {
    font-size: 0.9rem;
    opacity: 0.9;
    color: var(--color-primary);
  }

  .company {
    font-style: italic;
    opacity: 0.8;
    margin: 0;
  }

  /* List styling */
  .experience-list,
  .project-list,
  .education-list {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-top: 0.5rem;
  }

  .experience-list li,
  .project-list li,
  .education-list li {
    margin-bottom: 0.5rem;
  }

  /* Education and certification styling */
  .education-item,
  .certification-item,
  .achievement-item,
  .project-item {
    margin-bottom: 1.5rem;
  }

  .education-item h3,
  .certification-item h3,
  .achievement-item h3,
  .project-item h3 {
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .education-year,
  .education-place,
  .certification-provider {
